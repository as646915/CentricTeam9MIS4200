@model IEnumerable<CentricTeam9MIS4200.Models.Profile>

@{
    ViewBag.Title = "Employee Profiles";
}

<div class="well">
    <h2>Employee Profiles</h2>
    <p>
        @Html.ActionLink("Create New Employee Profile", "Create")
    </p>
</div>


<div class="well">
    <table class="table">
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Email
            </th>
            <th>
                Phone
            </th>
            <th>
                Office
            </th>
            <th>
                Role
            </th>
            <th>
                Date Hired
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.firstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.lastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.office)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.role)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dateHired)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.profileID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.profileID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.profileID })
                </td>
            </tr>
        }

    </table>
</div>